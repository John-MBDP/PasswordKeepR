    <%- include ("./partials/_logout") %>
    <section class="section-cta" id="cta">
      <div class="container">
        <div class="cta">
          <div class="cta-text-box">
            <h2 class="heading-secondary">Add Organization</h2>
            <form id="submit-organization" class="cta-form" action="/api/users/dashboard" method="POST" name="sign-up">
              <div>
                <label for="organization-name">Name</label>
                <input
                  id="name"
                  type="text"
                  placeholder="Name"
                  name="name"
                  required
                />
              </div>
              <div>
                <label for="organization-link">Domain</label>
                <input
                  id="email"
                  type="text"
                  placeholder="Domain name"
                  name="domain"
                  required
                />
              </div>
              <div>
                <label for="email">Username</label>
                <input
                  id="email"
                  type="text"
                  placeholder="Username"
                  name="username"
                  required
                />
              </div>
              <div>
                <label for="assword">Password</label>
                <input
                  id="password"
                  type="text"
                  placeholder="Password"
                  name="site_password"
                  required
                />
              </div>
              <div>
                <label for="select-where">Category</label>
                <select id="select-where" name="category" required>
                  <option value="">Please choose one option:</option>
                  <option value="entertainement">Entertainment</option>
                  <option value="banking">Banking</option>
                  <option value="social_media">Social Media</option>
                  <option value="other">Other</option>
                </select>
              </div>
                <button type="submit" class="btn btn--form" >Add</button>
            </form>
          </div>

        </div>
      </div>
    </section>

